* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-family: sans-serif, serif;
  color: white;
  font-size: 10px;
}

h1 {
  font-size: 3.906rem;
}

h2 {
  font-size: 3.125rem;
}

.main {
  width: 100vw;
  min-height: 100vw;
  background-color: #570411;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cardSearch button {
  color: #E6CC80;
  padding: 2px 4px;
  background-color: #570411;
  border: 1px solid white;
}

.cardDisplay {
  border: 2px solid black;
  width: 85%;
  min-height: 50vw;
}