* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  outline: none;
}

html {
  font-family: sans-serif, serif;
  color: white;
  font-size: 10px;
}

h1 {
  font-size: 3.906rem;
}

h2 {
  font-size: 3.125rem;
}

.main {
  width: 100vw;
  min-height: 100vw;
  background-color: #570411;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cardSearch {
  height: 40px;
  width: 50%;
  display: flex;
  justify-content: space-between;
  font-size: 30px;
}
.cardSearch input {
  height: 100%;
  width: 80%;
  border-radius: 0px;
  background-color: white;
  border: 2px solid black;
  color: black;
  padding-left: 10px;
}
.cardSearch button {
  height: 100%;
  color: #E6CC80;
  padding: 2px 20px;
  background-color: #570411;
  border: 1px solid white;
}

.cardDisplay {
  border: 2px solid black;
  width: 100%;
  min-height: 50vw;
  display: flex;
  flex-flow: row wrap;
  margin-top: 20px;
}
.cardDisplay .card {
  max-width: 20%;
}
.cardDisplay .cardImg {
  width: 100%;
  height: auto;
}
.cardDisplay .card:hover {
  transform: translateY(-1%);
  box-shadow: 10px 5px 5pxblack;
}
