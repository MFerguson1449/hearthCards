* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  outline: none;
}

html {
  font-family: sans-serif, serif;
  color: white;
  font-size: 10px;
}

h1 {
  font-size: 3.906rem;
}

h2 {
  font-size: 3.125rem;
}

.main {
  width: 100vw;
  min-height: 100vw;
  background-color: #570411;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cardSearch {
  height: 40px;
  width: 50%;
  display: flex;
  justify-content: space-between;
  font-size: 20px;
}
.cardSearch input {
  height: 100%;
  width: 80%;
  border-radius: 0px;
  background-color: #570411;
  border: 1px solid white;
  color: #E6CC80;
  padding-left: 10px;
}
.cardSearch button {
  height: 100%;
  color: #E6CC80;
  padding: 2px 20px;
  background-color: #570411;
  border: 1px solid white;
}

.cardDisplay {
  border: 2px solid black;
  width: 85%;
  min-height: 50vw;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  margin-top: 20px;
}
.cardDisplay .card {
  height: auto;
  border: 2px solid yellow;
}
.cardDisplay .cardImg {
  scale: 60%;
}